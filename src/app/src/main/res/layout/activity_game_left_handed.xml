<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".game.GameActivity">

    <hu.glavits.brasstrainer.typesetting.StaffView
        android:id="@+id/staffView"
        android:layout_width="220dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/keys_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scale="0.5" />

    <FrameLayout
        android:id="@+id/keys_holder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/keys_holder_height"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_air"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="73dp"
        android:layout_marginBottom="162dp"
        android:text="@string/air"
        app:layout_constraintBottom_toTopOf="@+id/keys_holder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.174"
        app:layout_constraintStart_toEndOf="@+id/staffView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/missing"
        app:layout_constraintEnd_toStartOf="@+id/staffView"
        app:layout_constraintHorizontal_bias="0.575"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>